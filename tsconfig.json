{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "entrypoints",
    "src",
    "api",
    "scripts",
    "tests",
    "wxt.config.ts",
    "tsup.config.ts",
    "vitest.config.ts"
  ]
}
